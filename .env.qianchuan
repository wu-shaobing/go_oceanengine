# 巨量千川应用信息
APP_ID=1846842779198378
APP_SECRET=b541c7b611dc34b0755802818539631b5d766d67

# OAuth 回调地址
CALLBACK_URL=http://localhost:8080/callback

# 授权URL（千川专用）
OAUTH_URL=https://qianchuan.jinritemai.com/openapi/qc/audit/oauth.html

