# 开发环境标识
ENV=development
DEBUG=true

# 日志配置
LOG_LEVEL=info
LOG_OUTPUT=stdout

# API 超时配置（秒）
API_TIMEOUT=30

# 重试配置
MAX_RETRIES=3
RETRY_DELAY=1000

